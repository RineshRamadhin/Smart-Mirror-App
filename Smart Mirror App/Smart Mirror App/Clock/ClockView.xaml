<Page
    x:Class="Smart_Mirror_App.Clock.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Smart_Mirror_App.Clock"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="{StaticResource clockViewModel}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel
            VerticalAlignment="Top" >
            <TextBlock 
            HorizontalAlignment="Left"
                Margin="20,0,0,0"
            Text="{Binding Path=CurrentTime, FallbackValue=Time will be shown here}" FontSize="26.667"
            />
            <TextBlock 
            HorizontalAlignment="Left"
                Margin="20,0,0,0"
            Text="{Binding Path=CurrentDate, FallbackValue=Date will be shown here}" FontSize="26.667"
            />

            <TextBlock
                HorizontalAlignment="Right"
                Text="{Binding Path=}" Margin="0,-68,20,0" FontSize="26.667"
                />

            <TextBlock
                HorizontalAlignment="Right"
                Text="17°C" Margin="0,-30,20,0" FontSize="26.667"
                />

        </StackPanel>
    </Grid>
</Page>
